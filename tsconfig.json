{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES6"],
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": ["src"]
}
